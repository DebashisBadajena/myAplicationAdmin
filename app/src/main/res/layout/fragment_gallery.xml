<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notes.GalleryFragment">


    <EditText
        android:id="@+id/notename"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="156dp"

        android:hint="Note name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/noteauthor"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"

        android:hint="Note Author name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notename" />

    <EditText
        android:id="@+id/notesize"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Note size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteauthor" />


    <ImageView
        android:id="@+id/notePdficon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/pdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesize" />


    <ImageView
        android:id="@+id/cancelNotepdf"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/close"
        app:layout_constraintBottom_toTopOf="@+id/notePdficon"
        app:layout_constraintEnd_toEndOf="@+id/notePdficon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/openNote"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="116dp"
        android:src="@drawable/openfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="pdf"
        android:textSize="20dp"
        android:textColor="#111"
        app:layout_constraintEnd_toEndOf="@+id/notePdficon"
        app:layout_constraintStart_toStartOf="@+id/notePdficon"
        app:layout_constraintTop_toBottomOf="@+id/notePdficon" />

    <androidx.cardview.widget.CardView
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/submitNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9C27B0"
            android:fontFamily="@font/aladin"
            android:gravity="center"
            android:text="SUBMIT"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"

            />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>